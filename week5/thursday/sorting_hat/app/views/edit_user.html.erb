<h1>Editing <%= @user.name %></h1>

<form action="/users/<%= @user.id %>" method="post">
  <!-- YOU NEED DIS -->
  <input type="hidden" name="_method" value="PATCH">
  <!-- YOU NEED DIS  ^^^^^^^^^^^^^^^^^^^-->

  <label for="name">Name</label>
  <input type="text" name="user[name]" value="<%= @user.name %>" placeholder="Jane Smith">

  <label for="email">Email</label>
  <input id="email" type="text" name="user[email]" value="<%= @user.email %>" placeholder="jobs@emails.com">

  <label for="phone_number">Phone</label>
  <input type="text" name="user[phone_number]" value="<%= @user.phone_number %>" placeholder="(xxx) xxx-xxxx">

  <input type="submit" name="submit" value="Save">
</form>
